doctype html
html(lang="sv")

  head
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Blogg
    // Bootstrap CSS
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    // My CSS
    link(rel="stylesheet" href="../mall.css")
  
  body
    .container
      header
        nav(class="navbar navbar-inverse navbar-expand-md navbar-dark bg-dark fixed-top")
          // Logo
          a(class="navbar-brand" href="http://localhost/wu2_nima/Blogg/Home/home.html") Blogg
          
          // Hamburger
          button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent")
            span(class="navbar-toggler-icon")
              
          // Responsive navbar
          .collapse.navbar-collapse(id="navbarSupportedContent")
            ul(class="navbar-nav m-auto")
              li(class="nav-item mx-4")
                a(class="nav-link" href="http://localhost/wu2_nima/Blogg/Home/home.html") Home
              li(class="nav-item mx-4")
                a(class="nav-link" href="http://localhost/wu2_nima/Blogg/Posts/posts.html") Posts
              li(class="nav-item mx-4")
                a(class="nav-link" href="http://localhost/wu2_nima/Blogg/Portfolio/portfolio.html") Portfolio
            ul(class="nav navbar-nav navbar-right")
              // Sign up button and icon
              li(class="nav-item")
                a(class="nav-link" href="http://localhost/wu2_nima/Blogg/Signup/signup.html") Sign up 
                  i(class="fas fa-user")
              // Log in button and icon
              li(class="nav-item")
                a(class="nav-link" href="http://localhost/wu2_nima/Blogg/Login/login.html") Log in 
                  i(class="fas fa-sign-in-alt")

    main(class="container" role="main")
      .row
        .col-6.mx-auto.text-center
          form
            .form-group
              input(type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email")
            .form-group
              input(type="password" class="form-control" id="exampleInputPassword1" placeholder="Password")
            .form-group
              input(type="text" class="form-control" id="exampleInputUsername" placeholder="Username")
            button(type="submit" class="btn btn-outline-dark") Sign up

    footer(class="blog-footer bg-light py-3 fixed-bottom")
      // Social media links
      p(class="text-center")
        a(href="#")
          i(class="fab fa-twitter fa-2x mx-3")
        a(href="#")
          i(class="fab fa-facebook fa-2x mx-3")
        a(href="#")  
          i(class="fab fa-instagram fa-2x mx-3")
        a(href="https://github.com/NikolaMC")
          i(class="fab fa-github fa-2x mx-3")
      // Back to top button
      p(class="text-center")
        a(class="btn btn-outline-dark" role="button" href="#") Back to top

